{
  "extends": "@vue/tsconfig/tsconfig.web.json",

  "compilerOptions": {
    "strictNullChecks": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ],

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
